{
  "compilerOptions": {
    "target": "ES2020",                             // üîÅ Melhor compatibilidade moderna (ex: nullish coalescing)
    "module": "commonjs",
    "lib": ["ES2020"],                              // ‚úÖ Suporte a novas APIs como Intl, Promise.allSettled etc.
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true                       // ‚úÖ Permite importar arquivos .json
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
